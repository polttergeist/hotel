<%= form_with(url: admin_rooms_path, model: @room) do |form| %>
  <%# render errors %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "Enter room's name" %>
  </div>

  <div>
    <%= form.label :cost %>
    <%= form.number_field :cost, placeholder: "Enter room's cost" %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: "Write down room's description" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
