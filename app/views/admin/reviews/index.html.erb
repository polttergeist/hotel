<%= javascript_pack_tag "review_email_validator", "data-turbo-track": "reload", defer: true %>

<div class="row text-center wrap col-xs-4 col-xs-offset-4"  style="padding: 2rem;">
  <h1>Admin's reviews page</h1>
</div>

<div id="reviews" class="wrap col-xs-8 col-xs-offset-2">
  <% @reviews.each do |review| %>
    <%= render review %>
    <hr style="margin: 0"/>
  <% end %>
</div>

<div class="col-xs-8 col-xs-offset-2 digg_pagination">
  <%= will_paginate @reviews %>
</div>