<div class="row">
  <div class="row text-center wrap col-xs-4 col-xs-offset-4"  style="padding: 2rem; margin-bottom: 2rem;">
    <h1>Reviews</h1>
    <h2>Write your own review!</h2>
  </div>

  <%= render 'shared/errors', obj: @review if defined? @review %>

  <div>
    <%= render "form" %>
  </div>
</div>

<div id="reviews" class="wrap col-xs-8 col-xs-offset-2">
  <% @reviews.each do |review| %>
    <%= render review %>
    <hr style="margin: 0"/>
  <% end %>
</div>

<div class="col-xs-8 col-xs-offset-2 digg_pagination">
  <%= will_paginate @reviews %>
</div>