
  <div class="col-xs-12"  id="form">
    <%= form_with(model: Review.new, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :name, class: "form-control", placeholder: "Enter your name" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :comment %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :comment, class: "form-control", placeholder: "Enter your comment" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit %>
        </div>
      </div>
    <% end %>
  </div>
