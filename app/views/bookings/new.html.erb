<%= javascript_pack_tag "compute_price", "data-turbo-track": "reload", defer: true %>
<%= javascript_pack_tag "email_validator", "data-turbo-track": "reload", defer: true %>

<div class="row text-center wrap header col-xs-4 col-xs-offset-4" style="margin-bottom: 2rem;">
  <h1>Book the room</h1>
</div>

<%= render 'shared/errors', obj: @booking if defined? @booking %>

<div class="wrap col-xs-8 col-xs-offset-2" id="rooms" style="margin-top: 0;">
  <%= render "rooms/room", obj: @room %>
</div>

<% unless @room.images.empty? %>
  <%= render "shared/carousel", obj: @room.images %>
<% end %>

<%= render "rooms/form" %>
