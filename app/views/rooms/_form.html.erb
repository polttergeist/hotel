<div class="row">
  <div class="col-xs-12">
    <%= form_with(url: booking_path, :html => {class: "form-horizontal", role: "form"}) do |form| %>
      <%# render errors %>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :name, class: "form-control", placeholder: "Enter your name" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :email, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :arrival_date %>
        </div>
        <div class="col-sm-6">
          <%= form.date_select :start_date, class: "form-control", start_year: Time.now.year %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :departure_date %>
        </div>
        <div class="col-sm-6">
          <%= form.date_select :end_date, class: "form-control", start_year: Time.now.year %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :comment %>
        </div>
        <div class="col-sm-6">
          <%= form.text_area :comment, class: "form-control", placeholder: "Enter your comment" %>
        </div>
      </div>

      <%= hidden_field_tag 'room_id', @room.id %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
